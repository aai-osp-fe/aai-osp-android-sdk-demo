<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step1: get a sdkToken" />

    <Button
        android:id="@+id/btnGetToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Get sdkToken" />

    <TextView
        android:id="@+id/tvSdkToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="sdf8790d8f098f080sd80s" />

    <!--  03fe649a-86bd-4fba-b584-739d0a7b79f7  -->
    <EditText
        android:id="@+id/etSdkToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="input a validate url"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="https://dev-oop-client.advai.cn/intl/openapi/hostLink/start?accountSdkToken=f4827c9e-5242-4d90-ae24-640db8236258" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Step2: start the flow" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStartFlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Flow" />

        <Button
            android:id="@+id/btnClearToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Clear Url" />

    </LinearLayout>

    <Button
        android:id="@+id/btnScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="使用扫码方式" />

</androidx.appcompat.widget.LinearLayoutCompat>